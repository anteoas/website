  [:article.page-content
   ;; Hero section stays the same
   [:section.hero-headline.page-hero
    {:style "background-image: linear-gradient(130deg, #003f7e4d, #3fb4984d), url('/assets/images/hero-about.jpg'); text-align: right"}
