{
  "name": "anteo-website",
  "version": "1.0.0",
  "description": "Anteo AS website - Simple markdown-based site",
  "scripts": {
    "build": "NODE_ENV=production node scripts/build.js",
    "build:dev": "NODE_ENV=development node scripts/build.js",
    "serve": "npx serve dist",
    "dev": "NODE_ENV=development node scripts/dev-server.js",
    "check-links": "node scripts/link-checker.js",
    "clean": "rm -rf dist .temp",
    "test": "jest --config config/jest.config.js",
    "test:watch": "jest --config config/jest.config.js --watch",
    "test:coverage": "jest --config config/jest.config.js --coverage",
    "test:unit": "jest --config config/jest.config.js tests/unit",
    "test:integration": "jest --config config/jest.config.js tests/integration"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "browser-sync": "^3.0.2",
    "cheerio": "^1.1.2",
    "esbuild": "^0.25.8",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "jest": "^30.0.5",
    "marked": "^11.1.0",
    "nodemon": "^3.0.2",
    "serve": "^14.2.1",
    "sharp": "^0.34.3"
  }
}
